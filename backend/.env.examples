# Example environment variables for the backend
# Copy this file to `.env` and fill in real values before running the server.

# Server port the Express app will listen on (optional)
# Default used in code: 3001
PORT=3001

# MongoDB connection string
# Example (local): mongodb://localhost:27017/sellaora
# Example (Atlas): mongodb+srv://<user>:<password>@cluster0.mongodb.net/sellaora?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/sellaora

# JWT secret used to sign and verify JSON Web Tokens (required for auth)
# Use a long, random string in production
JWT_SECRET=your_jwt_secret_here

# Vercel Token (Get from https://vercel.com/account/tokens)
VERCEL_TOKEN=your-vercel-token-here

# OpenAI API key (optional) â€” used by the /api/store/:storeId/ai-prompt route
# If not set, the server falls back to a local example response
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Cloudinary Configuration (Required for image uploads)
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# (Optional) NODE_ENV can be set to 'development' or 'production'
# Some libraries use this value (e.g. logging or debug behavior)
NODE_ENV=development
